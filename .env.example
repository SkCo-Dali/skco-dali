

# Azure/Microsoft Authentication
VITE_AZURE_CLIENT_ID=your_azure_client_id_here
VITE_AZURE_TENANT_ID=your_azure_tenant_id_here
VITE_AZURE_AUTHORITY=https://login.microsoftonline.com/your_tenant_id_here

# Microsoft Graph API
VITE_GRAPH_API_BASE_URL=https://graph.microsoft.com/v1.0

# Backend APIs
VITE_CRM_API_BASE_URL=https://your-crm-api.azurewebsites.net
VITE_AI_API_BASE_URL=https://your-ai-api.azurewebsites.net
VITE_TEMPLATES_API_BASE_URL=https://your-templates-api.azurewebsites.net
VITE_MAESTRO_API_BASE_URL=https://your-maestro-api.azurewebsites.net

# Static Resources
VITE_BLOB_RESOURCES_URL=https://your-blob-resources.blob.core.windows.net
VITE_AI_STUDIO_BLOB_URL=https://your-ai-studio.blob.core.windows.net

# CDN URLs
VITE_CDN_JSDELIVR_URL=https://cdn.jsdelivr.net
VITE_FONTS_GOOGLEAPIS_URL=https://fonts.googleapis.com
VITE_FONTS_GSTATIC_URL=https://fonts.gstatic.com

# Microsoft Login
VITE_MS_LOGIN_URL=https://login.microsoftonline.com

# Application Settings
VITE_APP_NAME=Your App Name
VITE_ENVIRONMENT=development

# Authentication Configuration
VITE_CACHE_LOCATION=sessionStorage
VITE_STORE_AUTH_STATE_IN_COOKIE=false
VITE_REDIRECT_URI=http://localhost:5173

# Security Settings - Configuración flexible de dominios
# Dominios permitidos (separados por comas)
VITE_ALLOWED_DOMAINS=skandia.com,skandia.co,skandia.com.co,gmail.com,outlook.com,hotmail.com,yahoo.com
# Habilitar/deshabilitar validación de dominio (true/false)
VITE_ENABLE_DOMAIN_VALIDATION=true
VITE_REQUIRED_SCOPES=User.Read,Mail.Send,Mail.Read,offline_access

# Supabase Edge Function Environment (for deployment)
MAESTRO_API_BASE_URL=https://your-maestro-api.azurewebsites.net

